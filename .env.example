# Где брать паттерны централизованно
PATTERNS_URL=https://your-domain.example/api/remnanode/patterns
PATTERNS_TOKEN=CHANGE_ME

# Куда слать webhook при срабатывании
WEBHOOK_URL=https://your-domain.example/api/remnanode/webhook
WEBHOOK_TOKEN=CHANGE_ME

# OPTIONAL override (обычно не нужен)
NODE_IP_OVERRIDE=

# Опционально
PATTERNS_POLL=60s
HTTP_TIMEOUT=2s
ALERT_QUEUE=256

# Если используешь docker exec режим
CONTAINER_NAME=remnanode

# Used only for patterns with banType=FIRST_IP_WEBHOOK_AFTER
NFT_BAN_CMD=nft add element inet remnaguard blocked_ipv4 { %IP% }
NFT_BAN_TIMEOUT=800ms
NFT_BAN_DEDUP_TTL=3600s

# Если используешь файловый режим (Вариант A)
LOG_FILE=/logs/xray.out.log